<!DOCTYPE html>
<html lang="en">
<head>
  {% block head_meta %}
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{% block title %}Chat{% endblock %}</title>
  {% endblock %}

  {% block head_styles %}
  <link rel="stylesheet" href="/chat/static/css/reset.css">
  <link rel="stylesheet" href="/chat/static/css/default.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.3.1/styles/atom-one-dark.min.css">
  {% endblock %}

  {% block head_scripts %}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
  <script type="module" src="/chat/static/js/chatmessage.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/marked-highlight/lib/index.umd.js"></script>
  <script type="module" src="/chat/static/js/persona-editor.js"></script>
  <script type="module" src="/chat/static/js/chatform.js"></script>
  <script type="module" src="/chat/static/js/action.js"></script>
  <script type="module" src="/chat/static/js/chat.js"></script>
  <script type="module" src="/chat/static/js/plugin-toggle.js"></script>
  {% endblock %}

  {% block head_favicon %}
  <link rel="apple-touch-icon" sizes="180x180" href="/chat/static/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/chat/static/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/chat/static/favicon/favicon-16x16.png">
  <link rel="manifest" href="/chat/static/site.webmanifest">
  {% endblock %}

  {% block head_extra %}{% endblock %}
</head>
<body>
  {% block body_init %}
  <script>
    window.theme = 'default';
    console.log("Init.");
    console.log("Log ID: {{ log_id }}");
    window.log_id = "{{ log_id }}";
    window.agent_name = "{{ agent_name }}";

  </script>
  {% endblock %}
 
  <div class="page-container">

    <div class="left-side">
      {% block pre_content %}
        <a target="_blank" href="/agent/{{ agent_name }}">New Chat <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" style="display:inline" class="bi bi-box-arrow-up-right" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M10 3.5a.5.5 0 0 0-.5-.5H3a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V6.5a.5.5 0 0 0-1 0V13a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5a1 1 0 0 1 1-1h6.5a.5.5 0 0 0 0-1z"/>
              <path fill-rule="evenodd" d="M13.354 2.354a.5.5 0 0 1 0 .708l-8 8a.5.5 0 0 1-.708-.708l8-8a.5.5 0 0 1 .708 0z"/>
        </a>
      {% endblock %}
    </div>

    {% block insert %}
    {% endblock %}

    {% block content %}
    <div class="main">
        <chat-ai sessionid="{{ log_id }}" agent_name="{{ agent_name }}"></chat-ai>
    </div>
    {% endblock %}

  </div> <!-- page-container -->

  {% block body_extra %}{% endblock %}
</body>
</html>
