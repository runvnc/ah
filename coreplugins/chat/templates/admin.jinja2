<!DOCTYPE html>
<html lang="en">
<head>
  {% block head_meta %}
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat</title>
  {% endblock %}
  {% block head %}
  <link rel="stylesheet" href="/chat/static/css/reset.css">
  <link rel="stylesheet" href="/chat/static/css/default.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.3.1/styles/atom-one-dark.min.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>

  <script type="module" src="/chat/static/js/chatmessage.js" ></script>
  <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/marked-highlight/lib/index.umd.js"></script>
  <script type="module" src="/chat/static/js/persona-editor.js"></script>
  <script type="module" src="/chat/static/js/plugin-toggle.js"></script>
  <script type="module" src="/chat/static/js/agent-editor.js"></script>
  <script type="module" src="/chat/static/js/model-preferences.js"></script>
  <script type="module" src="/chat/static/js/plugin-manager.js"></script>
  <link rel="apple-touch-icon" sizes="180x180" href="/chat/static/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/chat/static/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/chat/static/favicon/favicon-16x16.png">
  <link rel="manifest" href="/chat/static/site.webmanifest">
  {% endblock %}
  {% block head_end %}
  {% endblock %}
</head>
<body>
    {% block content_top %}
    {{ log_id  }}
    <script>window.theme = 'default';
            console.log("Init.")
    </script>
    {% endblock %}
    {% block content %}
    <plugin-toggle></plugin-toggle>

    <details>
      <summary>Plugin Manager</summary>
      <plugin-manager></plugin-manager>
    </details>

    <details>
      <summary>Persona Editor</summary>
      <persona-editor theme="dark" scope="local"></persona-editor>
    </details>
    <details>
      <summary>Agent Editor</summary>
      <agent-editor theme="dark" scope="local"></agent-editor>
    </details>

    <details>
      <summary>Model Preferences</summary>
      <model-preferences theme="dark" scope="local"></model-preferences>
    </details>
    {% endblock %}
    {% block footer %}
    {% endblock %}
</body>
</html>
